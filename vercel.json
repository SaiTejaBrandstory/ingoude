{
  "version": 2,
  "builds": [
    {
      "src": "*.php",
      "use": "@vercel/php"
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/banking-services", "destination": "/banking-services.html" },
    { "source": "/services", "destination": "/services.html" },
    { "source": "/financial-services", "destination": "/financial-services.html" },
    { "source": "/insurance-services", "destination": "/insurance-services.html" },
    { "source": "/contact-us", "destination": "/contact-us.html" },
    { "source": "/conversalq", "destination": "/conversalq.html" }
  ],
  "headers": [
    {
      "source": "(.*)\\.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    },
    {
      "source": "/public/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "(.*)\\.(css|js|svg|png|webp|jpg|jpeg|gif)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}